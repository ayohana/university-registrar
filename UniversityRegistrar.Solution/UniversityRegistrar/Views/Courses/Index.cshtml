@{
  Layout = "_Layout";
  ViewBag.Title = "All Courses";
}

@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Course>;

<h1>All Courses</h1>

@if (@Model.Count == 0)
{
  <h3>No courses have been added yet!</h3>
} 

@foreach (Course course in Model)
{
  <li>@Html.ActionLink($"{course.CourseName}{course.CourseNumber}", "Details", new { id = course.CourseId })</li>
}

<p>@Html.ActionLink("Add New Course", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>