@{
  Layout = "_Layout";
  ViewBag.Title = "All Students";
}

@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Student>
<h1><strong>List of Students</strong></h1>
@if (Model.Count == 0)
{
  <p>There are currently no students on file. Click the link below to add one</p>
}

@foreach (Student student in Model)
{
  <h3>@Html.ActionLink($"{student.FirstName} ${student.LastName}", "Details", new { id = student.StudentId})</h3>
}
