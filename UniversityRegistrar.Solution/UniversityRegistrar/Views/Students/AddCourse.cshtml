@{
  Layout = "_Layout";
  ViewBag.Title = "Add Course";
}

@model UniversityRegistrar.Models.Student

<div class="studentAddCourse">
  <h1><strong>Add a Course</strong></h1>

  <h4>Add a course to this student: @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model=> model.LastName)</h4>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.StudentId)

    @Html.Label("Select course")
    @Html.DropDownList("CourseId")

    <input type="submit" value="Save" />
  }
</div>

<p>@Html.ActionLink("Back to list", "Index")</p>